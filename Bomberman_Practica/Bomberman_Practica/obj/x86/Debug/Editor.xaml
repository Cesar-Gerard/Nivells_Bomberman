<Page
    x:Class="Bomberman_Practica.Editor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Bomberman_Practica"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:view="using:Bomberman_Practica.View"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    >

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>


        <StackPanel Grid.Column="0">
            
            
            
            <RadioButton x:ConnectionId='5' x:Name="rdoNivellLloc"                            >Nivell</RadioButton>
            <RadioButton x:ConnectionId='6' x:Name="rdoIntro"                            >Intro</RadioButton>
        </StackPanel>

        <RelativePanel x:ConnectionId='2' x:Name="rlpEditor" Grid.Column="1">
            <view:LevelView x:ConnectionId='3'
                x:Name="Level"
                Visibility="Collapsed"
                RelativePanel.AlignBottomWithPanel="True"
                RelativePanel.AlignTopWithPanel="True"
                RelativePanel.AlignLeftWithPanel="True"
                RelativePanel.AlignRightWithPanel="True"
                ></view:LevelView>
            
            
            <view:IntroView x:ConnectionId='4'
                x:Name="Intro"
                Visibility="Collapsed"
                RelativePanel.AlignBottomWithPanel="True"
                RelativePanel.AlignTopWithPanel="True"
                RelativePanel.AlignLeftWithPanel="True"
                RelativePanel.AlignRightWithPanel="True"    
            ></view:IntroView>

        </RelativePanel>
    </Grid>
</Page>

